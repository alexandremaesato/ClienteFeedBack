<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="clientefeedback.aplicacaocliente.Empresa.CadastrarEmpresaActivity"
    tools:showIn="@layout/activity_cadastrar_empresa"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewCadastrarEmpresa" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableLayoutCE">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowImagemPerfil">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ivImage"
                    android:src="@drawable/image"
                    app:siRadius="6dp"
                    app:siBorderWidth="6dp"
                    app:siBorderColor="#616161"
                    app:siSquare="true"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowNomeEmpresa"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nome:"
                    android:id="@+id/textViewNomeEmpresa"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextNomeEmpresa"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_fields" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowCnpj"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/cnpj"
                    android:id="@+id/textViewCnpj"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/editTextCnpj"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowRua"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/rua"
                    android:id="@+id/textView"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/editTextRua"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowNumeroCasa"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/numero_casa"
                    android:id="@+id/textViewNumeroCasa"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/editTextNumeroCasa"
                    android:inputType="numberDecimal"
                    android:background="@drawable/border_fields"
                    android:maxLength="9" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowComplemento"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/complemento"
                    android:id="@+id/textViewComplemento"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:textSize="16dp"
                    android:paddingRight="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextComplemento"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_fields" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowBairro"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/bairro"
                    android:id="@+id/textViewBairro"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/editTextBairro"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowCep"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/cep"
                    android:id="@+id/textViewCep"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCep"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowCidade"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/cidade"
                    android:id="@+id/textViewCidade"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCidade"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowEstado"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/estado"
                    android:id="@+id/textViewEstado"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextEstado"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowPais"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/pais"
                    android:id="@+id/textViewPais"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPais"
                    android:singleLine="true"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowDescricaoEmpresa"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/descricao_empresa"
                    android:id="@+id/textViewDescricaoEmpresa"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/editTextDescricaoEmpresa"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_fields" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tablerowTelefones"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/telefones_contato"
                    android:id="@+id/textViewTelefone"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_span="2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableAddTelefone"
                    android:layout_column="1"
                    android:layout_span="2"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tablerowTipoTelefone"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/telefone_tipo"
                            android:id="@+id/textViewTipoTelefone"
                            android:textColor="#000000"
                            android:layout_column="1"
                            android:gravity="left|center_vertical"
                            android:paddingRight="5dp"
                            android:textSize="16dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextTipoTelefone"
                            android:singleLine="true"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/border_fields" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tablerowNumeroTelefone"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/telefone_numero"
                            android:id="@+id/textViewNumeroTelefone"
                            android:textColor="#000000"
                            android:layout_column="1"
                            android:gravity="left|center_vertical"
                            android:paddingRight="5dp"
                            android:textSize="16dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextNumeroTelefone"
                            android:singleLine="true"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/border_fields" />

                    </TableRow>


                </TableLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_AddTelefone"
                    android:src="@android:drawable/ic_input_add"
                    android:layout_column="1"
                    android:layout_gravity="left" />

            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>