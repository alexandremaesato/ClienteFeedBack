<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv_empresa"
            android:layout_alignParentTop="true"
            android:src="@null" /-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_empresa"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_favorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_heart_outline_grey600_24dp"
                android:text="@string/favoritar"
                android:textColor="@color/colorSecondText"
                android:onClick="setFavorito"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_avaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="24sp"
                android:background="@drawable/rate_shape"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="0"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/iv_empresa"
            android:id="@+id/tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:textSize="24sp" />

        <TextView
            android:textColor="@color/colorSecondText"
            android:layout_below="@+id/tv_nome"
            android:id="@+id/tv_localizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_empresa"
            android:id="@+id/menu_card"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:onClick="showPopup" />



    </RelativeLayout>

</android.support.v7.widget.CardView>